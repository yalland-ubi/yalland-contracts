{
  "extends": "solhint:recommended",
  "rules": {
    "max-line-length": ["error", 140],
    "indent": ["error", 2],
    "bracket-align": "off",
    "not-rely-on-time": "off",
    "func-order": "off",
    "mark-callable-contracts": "off",
    "no-empty-blocks": "off",
    "compiler-version": ["error", "^0.5.0"],
    "private-vars-leading-underscore": "error"
  }
}
